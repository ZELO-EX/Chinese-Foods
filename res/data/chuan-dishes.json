        {
            "id": "mapo-doufu",
            "name": "麻婆豆腐",
            "foreign-name": "Mapo Doufu",
            "cuisine-id": "川菜",
            "description": "麻婆豆腐始创于清同治元年成都万福桥陈兴盛饭铺，由店主陈刘氏（因面有麻点称陈麻婆）创制。其特色在于麻、辣、烫、香、酥、嫩、鲜、活八字，称之为八字箴言。",
            "core-composion": [
                "豆腐"
            ],
            "secondary-composion": [
                "牛肉末",
                "郫县豆瓣酱",
                "豆豉",
                "辣椒面",
                "花椒",
                "蒜苗",
                "姜",
                "蒜",
                "生抽",
                "老抽",
                "料酒",
                "水淀粉",
                "食用油",
                "盐",
                "鸡精"
            ],
            "cooking-methods": [
                "烧"
            ],
            "flavors": [
                "麻辣",
                "鲜香"
            ],
            "core-features": [
                "色泽红亮",
                "豆腐嫩滑",
                "牛肉末酥香",
                "麻辣味浓",
                "入口即化"
            ],
            "cooking-step": [
                "将豆腐切成约2厘米见方的小块，放入加了少许盐的清水中浸泡片刻，去除豆腥味，捞出沥干水分备用。",
                "牛肉剁成末；蒜苗切成段；姜、蒜切末。",
                "锅中倒入适量食用油，油热后放入牛肉末，用中小火煸炒至牛肉末变色、酥散，盛出备用。",
                "锅中留底油，放入适量郫县豆瓣酱和豆豉，用小火炒出红油和香味。",
                "加入姜末、蒜末炒香，然后加入适量辣椒面和花椒炒出麻辣味（注意火候，避免炒糊）。",
                "倒入适量清水或高汤，加入生抽、老抽、料酒、盐和鸡精调味，大火煮开。",
                "轻轻放入豆腐块，用勺子轻轻推动，使其入味，中小火煮约3-5分钟。",
                "用水淀粉勾芡，使汤汁变得浓稠。",
                "最后撒上炒好的牛肉末和蒜苗段，稍微煮一下即可出锅装盘。"
            ]
        },
        {
            "id": "kung-pao-chicken",
            "name": "宫保鸡丁",
            "foreign-name": "Kung Pao Chicken",
            "cuisine-id": "川菜",
            "description": "宫保鸡丁由清朝四川总督丁宝桢所创，因其官至太子少保，人称“丁宫保”，其家厨所创此菜，故名“宫保鸡丁”。",
            "core-composion": [
                "鸡胸肉"
            ],
            "secondary-composion": [
                "花生米",
                "干辣椒",
                "花椒",
                "大葱",
                "姜",
                "蒜",
                "生抽",
                "老抽",
                "料酒",
                "白糖",
                "醋",
                "水淀粉",
                "盐",
                "食用油"
            ],
            "cooking-methods": [
                "炒"
            ],
            "flavors": [
                "酸甜",
                "麻辣",
                "咸鲜"
            ],
            "core-features": [
                "鸡肉鲜嫩",
                "花生米酥脆",
                "辣而不烈",
                "酸甜适口",
                "糊辣味浓"
            ],
            "cooking-step": [
                "将鸡胸肉切成约1厘米见方的丁，加入少许盐、料酒和水淀粉抓匀，腌制片刻。",
                "花生米提前用油炸酥脆，晾凉备用；或者使用现成的油炸花生米。",
                "干辣椒剪成小段（去蒂去籽可减少辣度）；大葱切成约1厘米长的马蹄形段；姜、蒜切片或末。",
                "取一个小碗，调入生抽、老抽、白糖、醋、料酒、水淀粉和少许清水，搅拌均匀成宫保汁备用。",
                "锅中倒入适量食用油，烧至六成热（约180℃）时，放入腌制好的鸡丁，快速滑散至变色成熟，立即盛出控油备用。",
                "锅中留少许底油，放入干辣椒段和花椒，小火煸炒出香味和辣味（注意别炒糊）。",
                "倒入滑好的鸡丁，快速翻炒均匀。",
                "倒入事先调好的宫保汁，大火快速翻炒，使鸡丁均匀裹上酱汁。",
                "待酱汁包裹住鸡丁并略微收浓时，加入炸好的花生米和葱段，快速翻炒几下即可出锅装盘。"
            ]
        },
        {
            "id": "twice-cooked-pork",
            "name": "回锅肉",
            "foreign-name": "Twice Cooked Pork",
            "cuisine-id": "川菜",
            "description": "回锅肉被誉为川菜之首和家常菜肴代表，古称“油爆锅”，起源存在祭祀起源说、油爆猪演变说及袍哥发明说等多种说法。",
            "core-composion": [
                "猪后臀肉"
            ],
            "secondary-composion": [
                "青椒",
                "蒜苗",
                "郫县豆瓣酱",
                "甜面酱",
                "豆豉",
                "姜",
                "蒜",
                "生抽",
                "白糖",
                "料酒",
                "食用油"
            ],
            "cooking-methods": [
                "煮",
                "炒"
            ],
            "flavors": [
                "咸鲜微甜",
                "酱香浓郁",
                "微辣"
            ],
            "core-features": [
                "肉片肥而不腻",
                "瘦而不柴",
                "色泽红亮",
                "酱香突出",
                "略带微辣"
            ],
            "cooking-step": [
                "将猪后臀肉（二刀肉）洗净，放入冷水锅中，加入几片姜和少许料酒，大火煮开后撇去浮沫，转中小火煮至筷子能轻松插入肉中（约15-20分钟），表示肉已熟透。",
                "将煮好的肉捞出，在冷水中稍凉后擦干表面水分，切成薄片备用。",
                "青椒去蒂去籽，切成菱形片或块；蒜苗斜切成段；姜切片；蒜切片。",
                "锅烧热，放入少量食用油，下入切好的肉片，小火煸炒至肉片出油，肉质微微卷曲，表面略显焦黄（逼出油脂是关键）。",
                "将煸炒出油的肉片推到锅边，放入适量郫县豆瓣酱（根据口味调整），小火炒出红油和香味。",
                "加入甜面酱、豆豉、姜片、蒜片一起炒香。",
                "倒入青椒片和蒜苗段，大火快速翻炒至断生。",
                "加入少许生抽、白糖调味，翻炒均匀即可出锅装盘。"
            ]
        }
    ]
}