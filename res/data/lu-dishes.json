    "dishes-list": [
        {
            "id": "sweet-and-sour-carp",
            "name": "糖醋鲤鱼",
            "foreign-name": "Sweet And Sour Carp",
            "cuisine-id": "鲁菜",
            "description": "糖醋鲤鱼是山东省济南市传统名菜，属鲁菜系，与油焖大虾、葱烧海参、九转大肠并称鲁菜四大名菜。该菜品常作为婚宴、寿宴的“三大件”之一，寓意“高中及第”“步步高升”。",
            "core-composion": [
                "鲤鱼"
            ],
            "secondary-composion": [
                "葱",
                "姜",
                "蒜",
                "清香米醋",
                "白砂糖",
                "酱油",
                "笋尖",
                "面粉",
                "水淀粉",
                "精盐",
                "黄酒",
                "鲜汤"
            ],
            "cooking-methods": [
                "炸",
                "煨"
            ],
            "flavors": [
                "酸甜",
                "咸鲜"
            ],
            "core-features": [
                "首、尾翘起，首略高",
                "油热，鱼热，汁热",
                "糖醋汁的味道要酸甜适度，汁的稀稠度要适度，糊的厚薄要适度",
                "嘴张开，腮张开，肚皮张开，身体刀口张开。"
            ],
            "cooking-step": [
                "将干黑木耳用开水涨发",
                "葱、姜、蒜均切成细丝",
                "荸荠、笋尖切成薄片",
                "将鲤鱼剖杀，洗净后抹干，再将鱼两面用刀划成深约1厘米的刀口，用精盐抹在刀口处，稍作腌渍",
                "把面粉向各刀口撒匀，再把整条鱼的两面都粘满面粉。",
                "油锅烧热，将鱼下锅，炸透呈金黄色取出沥油",
                "锅中放少量素油，放入葱丝、姜丝、蒜丝，加入食醋、黑木耳及荸荠片、笋片、鲜汤、黄酒、白糖、酱油、水淀粉等，烧成浓汁，快速浇在炸好的鱼上即可。"
            ]
        },
        {
            "id": "braised-prawns",
            "name": "油焖大虾",
            "foreign-name": "Braised Prawns",
            "cuisine-id": "鲁菜",
            "description": "油焖大虾是山东省的一道特色名菜，鲜香甜咸四种味道相辅相成，回味无穷，与葱烧海参、九转大肠、糖醋黄河鲤鱼齐名，被誉为鲁菜四大名菜之一。",
            "core-composion": [
                "对虾",
                "小龙虾",
                "基围虾"
            ],
            "secondary-composion": [
                "料酒",
                "白糖",
                "猪大油",
                "花椒油",
                "青蒜段",
                "姜丝",
                "蚝油",
                "姜汁",
                "高汤",
                "啤酒",
                "生抽",
                "醋",
                "清水"
            ],
            "cooking-methods": [
                "烧",
                "煨",
                "炖"
            ],
            "flavors": [
                "麻辣爽口",
                "口味鲜香",
                "咸鲜微甜",
                "酱香浓郁"
            ],
            "core-features": [
                "原料鲜嫩易熟",
                "成菜色泽浅红油亮"
            ],
            "cooking-step": [
                "将新鲜大虾清洗干净，剪去虾须和虾枪，背部开口去除沙线（可选）。",
                "炒锅加热，放入适量猪大油（或植物油），油热后放入处理好的大虾。",
                "大火煎炸至虾体变色，外壳酥脆，捞出控油备用。",
                "锅内留底油，放入姜丝爆香。",
                "加入适量料酒、生抽、白糖（或冰糖）、少许醋、高汤（或清水、啤酒）调色调味。",
                "汤汁煮开后，放入煎好的大虾，改中小火加盖焖制，使虾充分吸收汤汁入味（约10-15分钟）。",
                "待汤汁收浓至理想浓稠度，拣出姜丝不用。",
                "最后淋入少许花椒油增香，撒上青蒜段即可出锅装盘。"
            ]
        },
        {
            "id": "braised-intestines-in-brown-sauce",
            "name": "九转大肠",
            "foreign-name": "Braised Intestines In Brown Sauce",
            "cuisine-id": "鲁菜",
            "description": "九转大肠是山东省济南市传统名菜，由清光绪年间济南九华楼厨师首创，因文人借用道家“九转仙丹”典故命名。",
            "core-composion": [
                "猪大肠"
            ],
            "secondary-composion": [
                "葱",
                "姜",
                "芫荽",
                "清汤",
                "花椒油",
                "白油",
                "盐",
                "酱油",
                "米醋",
                "料酒",
                "白糖",
                "胡椒面",
                "砂仁面",
                "肉桂面"
            ],
            "cooking-methods": [
                "煮",
                "烧"
            ],
            "flavors": [
                "酸",
                "甜",
                "苦",
                "辣",
                "咸"
            ],
            "core-features": [
                "五味俱全",
                "肥而不腻",
                "色泽红润",
                "制作工艺复杂"
            ],
            "cooking-step": [
                "将猪大肠翻出内壁，用盐、醋反复搓洗，去除粘液和异味，再用清水冲洗干净，必要时可重复几次直至无异味。",
                "将洗净的大肠放入冷水锅中，加入葱段、姜片、料酒焯烫，煮沸后撇去浮沫，捞出再次用温水洗净，沥干水分备用。",
                "炒锅烧热，放入白油（或植物油），下入焯烫好的大肠，小火煸炒至表面略带焦斑，盛出待用。",
                "锅内留少许油，放入适量白糖，小火慢慢炒化至糖色变成枣红色（注意不要炒糊）。",
                "迅速倒入煸炒过的大肠，快速翻炒，使大肠均匀裹上糖色。",
                "加入适量酱油、清汤（没过大肠即可），放入葱段、姜片，大火烧开后转小火慢炖。",
                "炖煮约40分钟至1小时，至大肠软烂入味。",
                "加入适量精盐、胡椒面、砂仁面、肉桂面调味，继续炖煮片刻。",
                "最后沿锅边淋入少许米醋，再淋入花椒油提香，晃动锅子让味道融合，待汤汁收到浓稠即可关火。",
                "将大肠整齐地装盘，撒上切碎的芫荽末点缀即成。"
            ]
        }
    ]
}